<ul class="pagination pagination-circle">


    @for (int i = 1; i <= Math.Ceiling((double)Model.Count / (double)Model.PageSize); i++)
    {
        <td>
            @if (i != Model.CurrentPage)
            {
            <li class="page-item " aria-current="page">
