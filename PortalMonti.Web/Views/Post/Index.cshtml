            </div>

            //Komentarze
            <div class="card gedf-card" style="padding-top:5px">
                <div id="addpost2" @*style="display: none"*@ class="be-comment-block">
                    <h5>Komentarze</h5>
                    @foreach (var item2 in ViewBag.Comments)
