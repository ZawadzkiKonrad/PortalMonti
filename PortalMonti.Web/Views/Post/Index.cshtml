                        {
                            <a href="~/upload/@item.PostImage" data-lightbox="@item.PostImage"><img class="img-fluid" src="~/upload/@item.PostImage"></a>
                        }
                    </div>
                    <p class="card-text">
                        @item.Text

                    </p>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Edytuj", "EditPost", new { id = item.Id }) |
                    @Html.ActionLink("ViewPost", "ViewPost", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    @Html.ActionLink("Dodaj Komentarz", "AddComment", new { postId = item.Id })
