                                    <p class="be-comment-text">
                                        @item2.Text
                                    </p>
                                </div>
                            </div>
                        }
                    }

                    <div>
                        @await Html.PartialAsync("_AddCommentPartial", new PortalMonti.Application.ViewModels.Comment.NewCommentVm()
               { PostId = item.Id })
                    </div>
                </div>
            </div>

