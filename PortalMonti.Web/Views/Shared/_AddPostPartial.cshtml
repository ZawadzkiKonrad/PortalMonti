@model PortalMonti.Application.ViewModels.Post.NewPostVm

@{
    ViewData["Title"] = "AddPost";
}
@*<button id="btn">schowaj</button>
<button id="btn2">pokaz</button>
<section id="addpost">*@
    <form id="addpost" method="post" enctype="multipart/form-data" asp-action="AddPost">
        <div class="card gedf-card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts" role="tab" aria-controls="posts" aria-selected="true">
                            Make
                            a publication
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="images-tab" data-toggle="tab" role="tab" aria-controls="images" aria-selected="false" href="#images">Images</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="posts" role="tabpanel" aria-labelledby="posts-tab">
                        <div class="form-group">

                            <input asp-for="Name" class="form-control" placeholder="Tytuł" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <br />
                            <label class="sr-only" for="message">post</label>
                            <textarea asp-for="Text" class="form-control" id="message" rows="3" placeholder="Co chciałbyś napisać?">
                    </textarea>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="tab-pane fade" id="images" role="tabpanel" aria-labelledby="images-tab">
                        <div class="form-group">
                            <div class="col-md-10">

                                <label class="form-label" for="customFile">Dodaj zdjęcie</label>
                                <input name="file" type="file" class="form-control" />
                            </div>
                        </div>
                        <div class="py-4"></div>
                    </div>
                </div>
                <div class="btn-toolbar justify-content-between">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary">share</button>
                    </div>
                    <div class="btn-group">
                        <button id="btnGroupDrop1" type="submit" class="btn btn-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                                aria-expanded="false">
                            <i class="fa fa-globe"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="btnGroupDrop1">
                            <a class="dropdown-item" href="#"><i class="fa fa-globe"></i> Public</a>
                            <a class="dropdown-item" href="#"><i class="fa fa-users"></i> Friends</a>
                            <a class="dropdown-item" href="#"><i class="fa fa-user"></i> Just me</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </form>

